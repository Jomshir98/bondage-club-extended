{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
        "target": "ES2018",
        "baseUrl": "./src",
        "rootDir": "./src",
        "noEmit": false,
        "sourceMap": true,
        "inlineSources": true,

        // Set `sourceRoot` to  "/" to strip the build path prefix
        // from generated source code references.
        // This improves issue grouping in Sentry.
        "sourceRoot": "/"
    },
	"include": [
		"node_modules/bc-stubs/bc/**/*.d.ts",
		"./src/**/*"
	]
}
